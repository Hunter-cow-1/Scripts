name: 雨云

on:
  workflow_dispatch:
  schedule:
    # - cron: "0 23 * * *" 
    # 0 22 * * *

jobs:
    build:
        runs-on: ubuntu-latest
        steps:
            - name: 拉取代码
              uses: actions/checkout@v2
            - name: Set up Python 3.7
              uses: actions/setup-python@v1
              with:
                   python-version: 3.7
            - name: 安装依赖包
              run: |
                  python -m pip install --upgrade pip
                  pip install requests
            - name: "运行【云雨】"
              run: |
                  python3 yuyun.py
              env:
                  DD_BOT_ACCESS_TOKEN: ${{ secrets.DD_BOT_ACCESS_TOKEN }}
